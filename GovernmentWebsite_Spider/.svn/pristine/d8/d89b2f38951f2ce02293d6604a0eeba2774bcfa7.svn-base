# Configure logging for testing: optionally with log file
log4j.rootLogger=debug,logfile,logfile1
#log4j.logger.org.apache.http=warn
# log4j.rootLogger=WARN,DEBUG BBS, logfile

log4j.appender.NEWS=org.apache.log4j.ConsoleAppender 
log4j.appender.NEWS.layout=org.apache.log4j.PatternLayout
log4j.appender.NEWS.layout.ConversionPattern=%d %p [%c] - %m%n

log4j.appender.logfile=org.apache.log4j.RollingFileAppender
log4j.appender.logfile.File=log/info.log
log4j.appender.logfile.Threshold=DEBUG
log4j.appender.logfile.layout=org.apache.log4j.PatternLayout
log4j.appender.logfile.layout.ConversionPattern=%d %p [%c] - %m%n

log4j.appender.logfile1=org.apache.log4j.RollingFileAppender
log4j.appender.logfile1.File=log/task.log
log4j.appender.logfile1.Threshold=debug
log4j.appender.logfile1.layout=org.apache.log4j.PatternLayout
log4j.appender.logfile1.layout.ConversionPattern=%d %p [%c] - %m%n

